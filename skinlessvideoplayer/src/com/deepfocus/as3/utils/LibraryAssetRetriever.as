package com.deepfocus.as3.utils{	import flash.display.DisplayObject;	import flash.display.MovieClip;	import flash.system.ApplicationDomain;
		public class LibraryAssetRetriever{		public function LibraryAssetRetriever(){}				public static function getDisplayObject($libraryClip:DisplayObject,$assetID:String):DisplayObject{			var assetClass:Class	= Class($libraryClip.loaderInfo.applicationDomain.getDefinition($assetID));			return new assetClass();		}		public static function getClass($libraryClip:DisplayObject,$assetID:String):Class{			return Class($libraryClip.loaderInfo.applicationDomain.getDefinition($assetID));		}				public static function getAsset($libraryName:String, $displayObject:* = null):MovieClip{			$displayObject =($displayObject == null) ? ApplicationDomain.currentDomain : $displayObject.loaderInfo.applicationDomain;			var asset:Class = $displayObject.getDefinition($libraryName) as Class;			return new asset();		}	}}